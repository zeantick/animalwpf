<Window x:Class="animalwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animal WPF" Height="400" Width="700">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- ListBox с животными -->
        <ListBox x:Name="AnimalsListBox" DisplayMemberPath="Name" />

        <!-- Правая панель -->
        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Name:" />
            <TextBlock x:Name="NameText" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Age:" />
            <TextBlock x:Name="AgeText" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- TextBox для еды -->
            <TextBox x:Name="FoodTextBox" Width="150" Margin="0,0,0,10" Text=""/>

            <WrapPanel Margin="0,0,0,10">
                <Button x:Name="MakeSoundButton" Content="Make Sound" Width="100" Margin="0,0,5,0" Click="MakeSoundButton_Click"/>
                <Button x:Name="FeedButton" Content="Feed" Width="80" Margin="0,0,5,0" Click="FeedButton_Click"/>
                <Button x:Name="CrazyActionButton" Content="Crazy Action" Width="100" Click="CrazyActionButton_Click"/>
            </WrapPanel>

            <!-- TextBox для нового животного -->
            <TextBox x:Name="NewAnimalTextBox" Width="150" Margin="0,0,0,10" Text=""/>
            <WrapPanel Margin="0,0,0,10">
                <Button x:Name="AddAnimalButton" Content="Add Animal" Width="100" Margin="0,0,5,0" Click="AddAnimalButton_Click"/>
                <Button x:Name="RemoveAnimalButton" Content="Remove Animal" Width="100" Click="RemoveAnimalButton_Click"/>
            </WrapPanel>

            <TextBlock Text="Log:" Margin="0,10,0,0"/>
            <ListBox x:Name="LogListBox" Height="150"/>
        </StackPanel>
    </Grid>
</Window>
